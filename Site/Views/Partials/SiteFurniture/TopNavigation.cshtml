@inherits Umbraco.Web.Mvc.UmbracoTemplatePage
@using Umbraco.Web;
@{
    var site = Model.Content.Site();
    var level1 = site.Children.Where(x => x.IsVisible());
}

<div class="mainBg headerNavWrapper">
    <nav class="headerNav" id="menuNav">
        <ul>
            <li>
                <a class='@(Model.Content.Id == site.Id ? " active" : null)' href="@site.Url">Home</a>
            </li>

            @foreach (var item1 in level1)
            {
                var level2 = item1.Children.Where(x => x.IsVisible());

                <li>
                    <a class='@(item1.IsAncestorOrSelf(Model.Content) ? " active" : null)' href="@item1.Url">@item1.Name</a>
                    @if (level2.Count() > 0) 
                    {
                        <ul>
                            @foreach( var item2 in level2) {
                                <li><a class='@(item2.IsAncestorOrSelf(Model.Content) ? " active" : null)' href="@item2.Url">@item2.Name</a></li>
                            }
                        </ul>
                    }
                </li>
            }
        </ul>
    </nav>
</div>