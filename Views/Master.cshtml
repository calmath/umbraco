@using Umbraco.Web.Models;
@using ContentModels = Umbraco.Web.PublishedModels;
@inherits Umbraco.Web.Mvc.UmbracoViewPage
@{
    Layout = null;
    var siteSettings = Model.Root() as ISiteSettings;
    var seoMetaTags = Model as ISeoMetaTags;
    var footer = Model.Root() as IFooter;

    //Umbraco.Core.Models.Membership.IMembershipUser user = null;
    var user = "";
    if (Umbraco.MemberIsLoggedOn())
    {
        var myUser = System.Web.Security.Membership.GetUser();   
        if (myUser != null)
        {
            //var applicationContext = Umbraco.Core.Composing.Current.Services;
            //user = applicationContext.MemberService.GetByUsername(myUser.UserName).Name;
        }
    }
}

<!DOCTYPE html>
<html lang="@Model.GetCultureFromDomains()">

<head>

    @{
        var metaTitle = string.Empty;
        if (seoMetaTags != null)
        {
            metaTitle = string.IsNullOrWhiteSpace(seoMetaTags.SiteTitle) ? Model.Name : seoMetaTags.SiteTitle;
        }
    }
    <title>@metaTitle</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="format-detection" content="telephone=no">
    @if (seoMetaTags != null)
    {
        <meta name="keywords" content='@string.Join(",", seoMetaTags.Keywords.ToArray<string>())' />
        <meta name="description" content="@seoMetaTags.Description" />

        if (seoMetaTags.HideFromSearch == true)
        {
            <meta name="robots" content="noindex, nofollow">
        }
    }
    <link href="https://fonts.googleapis.com/css?family=Muli:300,400,700" rel="stylesheet">
    <link rel="stylesheet" type="text/css" href="/css/style.css">

</head>

<body>
    <header class="theme-default">
        <div class="bgLight no-wrap row ">
            <div class="siteLabel">
                <a href="/">
                    <img src="@siteSettings.SiteLogo.Url" alt="@siteSettings.SiteLogo.Name" /
                </a>
            </div>
            @Html.Partial("~/Views/Partials/SiteFurniture/TopNavigation.cshtml")
            <div class="siteNav">
                <div class="">
                    @if (!user.IsNullOrWhiteSpace())
                    {
                        <span>@user</span>
                    }
                </div>
                @if (siteSettings.Login)
                {
                    <div class="login">
                        @if(user.IsNullOrWhiteSpace())
                        {
                            <a href="/login/" title="Login" id="login">Login</a>
                        }
                        else
                        {
                            using (Html.BeginUmbracoForm("SubmitLogout", "Member", System.Web.Mvc.FormMethod.Post, new { id = "logout" }))
                            {
                                @Html.AntiForgeryToken()
                                <button name="login" type="submit"><span>Logout</span></button>
                            }
                        }
                    </div>
                }
                <button title="menu" class="menuIcon" id="menuIcon" disabled>
                    <span class="menuLine first"></span>
                    <span class="menuLine second"></span>
                    <span class="menuLine third"></span>
                    <span class="access">Menu</span>
                </button>
            </div>
        </div>
    </header>

    <main>
        @RenderBody()
    </main>

    @Html.Partial("~/Views/Partials/SiteFurniture/Footer.cshtml")
    @Html.Partial("~/Views/Partials/Components/CookieBanner.cshtml")
    <script src="/scripts/index.js" async></script>
    @RenderSection("EndBodyScripts", false)
    @{
        if (!string.IsNullOrWhiteSpace(footer.GlobalScripts))
        {
            @Html.Raw(footer.GlobalScripts) 
        }


        if (seoMetaTags != null && !string.IsNullOrWhiteSpace(seoMetaTags.CustomScripts))
        {
            @Html.Raw(seoMetaTags.CustomScripts) 
        }
    }


