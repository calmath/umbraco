{
	"files" : {
		"include" : "UID-project/sass/**/*.scss"
	},
	"options" : {
		"formatter": "stylish",
		"merge-default-rules" : false
	},
	"rules" : {
		"attribute-quotes" : [
			2,
			{
				"include" : true
			}
		],
		"bem-depth" : [
			2,
			{
				"max-depth" : 3
			}
		],
		"border-zero" : [
			2,
			{
				"convention" : '0'
			}
		],
		"brace-style" : [
			2,
			{
				"style" : "1tbs",
				"allow-single-line" : false
			}
		],
		"class-name-format" : [
			2,
			{
				"allow-leading-underscore" : false,
				"convention" : "[a-zA-z0-9_-]*",
				"convention-explanation" : "",
				"ignore" : []
			}
		],
		"clean-import-paths" : [
			2,
			{
				"leading-underscore" : true,
				"filename-extension" : false
			}
		],
		"declarations-before-nesting" : 2,
		"empty-args" : [
			2,
			{
				"include" : true
			}
		],
		"empty-line-between-blocks" : [
			2,
			{
				"include" : true,
				"allow-single-line-rulesets" : false
			}
		],
		"extends-before-declarations" : 2,
		"extends-before-mixins" : 2,
		"final-newline" : [
			2,
			{
				"include" : true
			}
		],
		"force-attribute-nesting" : 0,
		"force-element-nesting" : 0,
		"force-pseudo-nesting" : 0,
		"function-name-format" : [
			1,
			{
				"allow-leading-underscore" : false,
				"convention" : "camelcase",
				"convention-explanation" : "Functions must be camelcase"
			}
		],
		"hex-length" : [
			1,
			{
				"style" : 'long'
			}
		],
		"hex-notation" : [
			1,
			{
				"style" : 'lowercase'
			}
		],
		"indentation" : [
			2,
			{
				"size" : "tab"
			}
		],
		"leading-zero" : [
			2,
			{
				"include" : true
			}
		],
		"max-line-length" : [
			2,
			{
				length: 90
			}
		],
		"mixin-name-format" : [
			2,
			{
				"allow-leading-underscore" : false,
				"convention" : "camelcase",
				"convention-explanation" : "Mixins must be camelcase"
			}
		],
		"mixins-before-declarations" : 2,
		"no-attribute-selectors" : 0,
		"no-color-hex" : 0,
		"no-color-keywords" : 0,
		"no-color-literals" : 0,
		"no-combinators" : 0,
		"no-css-comments" : 0,
		"no-debug" : 0,
		"no-duplicate-properties" : 0,
		"no-empty-rulesets" : 2,
		"no-extends" : 0,
		"no-ids" : 2,
		"no-important" : 0,
		"no-invalid-hex" : 2,
		"no-mergeable-selectors" : 2,
		"no-misspelled-properties" : 2,
		"no-qualifying-elements" : 0,
		"no-trailing-whitespace" : 2,
		"no-trailing-zero" : 2,
		"no-transition-all" : 2,
		"no-universal-selectors" : 1,
		"no-url-domains" : 0,
		"no-url-protocols" : [
			0,
			{
				"allow-protocol-relative-urls" : 2
			}
		],
		"no-vendor-prefixes" : 1,
		"no-warn" : 0,
		"one-declaration-per-line" : 2,
		"property-sort-order" : 0,
		"pseudo-element" : 2,
		"quotes" : [
			2,
			{
				"style" : "double"
			}
		],
		"shorthand-values" : 2,
		"single-line-per-selector" : 0,
		"space-after-colon" : 2,
		"space-after-comma" : 2,
		"space-around-operator" : 2,
		"space-before-bang" : [
			2,
			{
				"include" : true
			}
		],
		"space-before-brace" : [
			2,
			{
				"include" : true
			}
		],
		"space-between-parens" : [
			2,
			{
				"include" : false
			}
		],
		"trailing-semicolon" : [
			2,
			{
				"include" : true
			}
		],
		"url-quotes" : 2,
		"variable-name-format" : [
			1,
			{
				"allow-leading-underscore" : false,
				"convention" : "camelcase",
				"convention-explanation" : "Variables must be camelcase"
			}
		]
	}
}